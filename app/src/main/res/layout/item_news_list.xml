<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_news_icon"
        android:src="@mipmap/news_pic_default"
        android:layout_width="80dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/tv_news_title"
        android:text="新闻标题"
        android:textSize="18sp"
       android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/iv_news_icon"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_pub_date"
        android:text="发布时间"
        android:layout_toRightOf="@id/iv_news_icon"
        android:layout_alignBottom="@id/iv_news_icon"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_comment_icon"
        android:layout_alignBottom="@id/tv_pub_date"
        android:layout_marginBottom="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:src="@mipmap/icon_news_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>